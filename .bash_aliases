#!/bin/bash

alias cp='cp --verbose'
alias grep='grep --color=auto'
alias histgrep='cat ~/.bash_history | grep'
alias ln='ln --verbose'
alias ls='ls --color=always --human-readable -lo'
alias lsa='ls --almost-all'
alias mkdir='mkdir --verbose --parents'
alias mv='mv --verbose'
alias rename='rename --verbose'
alias rm='rm --verbose'
